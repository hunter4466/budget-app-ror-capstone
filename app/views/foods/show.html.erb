<section> 
 <%= link_to "Add food", foods_new_path(), class: 'add_food_btn' %>
    <ul class="food-show-container">
        <li class="first-line">Food</li>
        <li class="first-line">Measurement unit</li>
        <li class="first-line">Unit price</li>
        <li class="first-line">Actions</li>
      <% @foods.each do |food|%>
        <% if food.user_id == @user %>
            <li class="next-line"><%= food.name %></li>
            <li class="next-line"><%= food.measurement_unit %></li>
            <li class="next-line"><%= food.price %></li>
            <%= button_to "Remove", user_destroy_food_path(id: food.id), method: :delete, class: 'next-line-btn'  %>
        <% end %>
      <% end %>
    </ul>
</section>
