<div class="recipe_new_main_container">
<h2 class="login_title">Sign up now</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, class: 'recipe_new_title_label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'recipe_new_title_input'  %>

    <%= f.label :password, class: 'recipe_new_title_label' %>
    <% if @minimum_password_length %>
    <h1 class='recipe_new_title_label'>(<%= @minimum_password_length %> characters minimum)</h1>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'recipe_new_title_input' %>

    <%= f.label :password_confirmation, class: 'recipe_new_title_label'   %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'recipe_new_title_input'  %>

    <%= f.label :name, class: 'recipe_new_title_label'  %>
    <%= f.text_field :name, class: 'recipe_new_title_input'  %>

  <div class="actions">
    <%= f.submit "Sign up", class: 'recipe_new_submit_btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
