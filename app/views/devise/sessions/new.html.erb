<div class="recipe_new_main_container">
<h2 class="login_title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email, class: 'recipe_new_title_label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class: 'recipe_new_title_input' %>

    <%= f.label :password, class: 'recipe_new_title_label' %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password', class: 'recipe_new_title_input' %>


  <% if devise_mapping.rememberable? %>

      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'remember_me_btn' %>

  <% end %>
    <%= f.submit "Log in", class: 'recipe_new_submit_btn' %>

<% end %>

<%= render "devise/shared/links" %>
